FROM nginx:1.27-alpine

# Use latest stable Swagger UI version
ENV SWAGGER_UI_VERSION=5.17.14
ENV URL=**None**
ENV API_URL=swagger.json

# Create non-root user for security
RUN addgroup -g 1001 -S swagger && \
    adduser -S -D -H -u 1001 -h /var/cache/nginx -s /sbin/nologin -G swagger -g swagger swagger

# Install curl and download Swagger UI
RUN apk add --no-cache curl \
    && curl -L https://github.com/swagger-api/swagger-ui/archive/v${SWAGGER_UI_VERSION}.tar.gz | tar -zxv -C /tmp \
    && cp -R /tmp/swagger-ui-${SWAGGER_UI_VERSION}/dist/* /usr/share/nginx/html \
    && rm -rf /tmp/* \
    && apk del curl

# Remove default nginx config
RUN rm /etc/nginx/conf.d/default.conf

# Copy custom nginx config
COPY nginx.conf /etc/nginx/conf.d/

# Copy swagger spec and startup script
COPY swagger.json /usr/share/nginx/html/swagger.json
COPY start.sh /start.sh

# Set proper permissions
RUN chmod +x /start.sh && \
    chown -R swagger:swagger /usr/share/nginx/html && \
    chown -R swagger:swagger /var/cache/nginx && \
    chown -R swagger:swagger /var/log/nginx && \
    chown -R swagger:swagger /etc/nginx/conf.d && \
    touch /var/run/nginx.pid && \
    chown -R swagger:swagger /var/run/nginx.pid

# Create nginx.conf for non-root user
RUN sed -i 's/user nginx;/user swagger;/' /etc/nginx/nginx.conf && \
    sed -i 's/listen 80;/listen 8080;/' /etc/nginx/conf.d/default.conf 2>/dev/null || true

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/health || exit 1

# Switch to non-root user
USER swagger

# Expose port
EXPOSE 8080

# Start nginx
CMD ["/start.sh"]